  },
  "devDependencies": {
    "chai": "^4.2.0",
    "firebase-functions-test": "^0.1.6",
    "mocha": "^7.1.1",
    "sinon": "^9.0.2",
    "tslint": "^5.12.0",
    "typescript": "^3.2.2"
  },
